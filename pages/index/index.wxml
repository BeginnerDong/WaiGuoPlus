	<cover-view class="send_cont">
		<cover-image src="/images/send_bg.png"></cover-image>
		<cover-view class="send_menu">
			<cover-view class="menu">
				<cover-view class="menu_tlt">记录我的歪果动态</cover-view>
				<cover-view class="menu_btn flex">
					<cover-view class="menu_item" bindtap="choose">
						<cover-image src="/images/menu_icon1.png"></cover-image>
						<cover-view class="font32 color3">动态</cover-view>
					</cover-view>
					<cover-view class="menu_item" bindtap="intoPath" data-path="/pages/sendAnswer/sendAnswer">
						<cover-image src="/images/menu_icon2.png"></cover-image>
						<cover-view class="font32 color3">问答</cover-view>
					</cover-view>
					<cover-view class="menu_item" bindtap="intoPath" data-path="/pages/sendTeasing/sendTeasing">
						<cover-image src="/images/menu_icon3.png"></cover-image>
						<cover-view class="font32 color3">吐槽</cover-view>
					</cover-view>
					<cover-view class="menu_item" bindtap="intoPath" data-path="/pages/sendSmallVideo/sendSmallVideo">
						<cover-image src="/images/menu_icon4.png"></cover-image>
						<cover-view class="font32 color3">小视频</cover-view>
					</cover-view>
				</cover-view>
				<cover-view class="close" bindtap="close">
					<cover-image src="/images/close.png"></cover-image>
				</cover-view>
			</cover-view>

		</cover-view>
	</cover-view>
</cover-view>
