								<cover-view  style="{{web_playId==item.id+''+index+''+c_index?'display: none':'display:block;z-index:2;position:absolute;top: 45%;left:45%'}}">
									<cover-image id="{{item.id+''+index+''+c_index}}" bindtap="vedioPlay" src="/images/play.png" style="width:60rpx;height:60rpx;" />
								</cover-view>


							</video>
