	</cover-view>
	<cover-view class="navbar_add" bindtap="menu">
		<cover-view class="nav_img">
			<cover-image src="/images/navbar_add.png" style="border:solid 8rpx #fff;border-radius:50%;"></cover-image>
		</cover-view>
	</cover-view>
	<cover-view class="navbar_item  bg1" bindtap="intoPathRedi" data-path="/pages/user/user">
