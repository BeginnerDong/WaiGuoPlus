        <view class="text this-text">首页</view>
    </view>
    <view class="navbar_add"   bindtap="menu">
        <view class="nav_img">
           <image src="/images/navbar_add.png" style="border:solid 8rpx #fff;border-radius:50%;"></image>
        </view>   
    </view>
    <view class="navbar_item  bg1"   bindtap="intoPathRedirect" data-path="/pages/user/user">
        <view class="nav_img">
           <image src="/images/navbar2.png"></image>
        </view>
        <view class="text">我的</view>
    </view>
</view>