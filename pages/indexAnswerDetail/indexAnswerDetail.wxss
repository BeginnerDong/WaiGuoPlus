/**index.wxss**/
@import "../../wxParse/wxParse.wxss"
.information_title{
	width:100%;
	height:78rpx;
	line-height:90rpx;
	overflow: hidden;
}
.information_title span{
	font-size:28rpx;
	color:#333;
	margin:0 10rpx;
}
.two_img{
	width:48%;
	height:240rpx;
}
.two_img image{
	width:100%;
	height:100%;
}
.three_img{
	width:31%;
	height:200rpx;
}
.three_img image{
	width:100%;
	height:100%;
}
.information_cont{

}
.sender image{
	width:34rpx;
	height:26rpx;
	margin-left:10rpx;
}
.sender>view{
	width:33.33%;
}
.detail{
	overflow:hidden;
}
.detail image{
	width:100%;
	height:400rpx;
	margin:20rpx auto;
}
.big_title{
	width:100%;
	height:116rpx;
	text-align:center;
	line-height:116rpx;
}
.user_img{
	width:96rpx;
	height:96rpx;
	border-radius:50%;
	overflow:hidden;
}
.user_left{
	width:20%;
}
.user_center{
	width:80%;
}
.comment{
	border-radius:20rpx;
	padding:0 0 26rpx 0;
	margin-top:24rpx;
}
.information_tlt{
	height:180rpx;
}
.comment_list{
	padding:20rpx 0;
}
.comment_left{
	width:30%;
}
.comment_right{
	width:70%;
}
.more_icon{
	text-align:center;
}
.quesition_number>view{
	text-align:center;
}
.more_icon image{
	width:24rpx;
	height:14rpx;
}
.handle{
	width:100%;
	height:96rpx;
}
.handle_browse{
	width:33.33%;
}
.handle_browse image{
	width:34rpx;
	height:28rpx;
	margin-right:14rpx;

}
.handle_browse button{
	width:60rpx;
	height:40rpx;
	line-height:40rpx;
	border:none;
	padding:0;
	margin:0;
	background:none;
}
/**************问答****************/
.quesition_user{
	height:90rpx;
	border-bottom:solid 1px #b0b0b0;
}
.quesition_user text{
	margin-right:56rpx;
}
.quesition_handle{
	height:112rpx;
}
.quesition_item{
	width:50%;
	height:40rpx;
}
.quesition_item image{
	width:30rpx;
	height:30rpx;
	margin-right:14rpx;
}
.quesition_number{
	text-align: center;
	padding-bottom:24rpx;
}
.more_icon image{
	width:26rpx;
	height:14rpx;
}
.send{
	width:100%;
	height:100%;
	position:fixed;
	left:0;
	bottom:-100%;
	z-index:9999;
}
.mask{
	width:100%;
	height:100%;
	position:fixed;
	left:0;
	top:0;
	z-index:9999;
	transition:all 0.5s;
	-webkit-transition:all 0.5s;
	background:rgba(0,0,0,0.3);
}
.mask_cont{
	position: relative;
	width:100%;
	height:100%;
}
.choose_video{
	position: absolute;
	left:0;
	bottom:0;
	z-index:9999;
	width:100%;
}
.choose_send{
	width:100%;
	height:100rpx;
	line-height:100rpx;
	color:#000;
	text-align:center;
}
.send image{
	width:100%;
	height:100%;
}
.send_cont{
	width:100%;
	height:100%;
	position:relative;
}
.send_menu{
	width:100%;
	height:72%;
	position:absolute;
	left:0;
	bottom:0;
}
.menu{
	width:86.4%;
	padding:0 6.8%;
	height:100%;
}
.menu_btn{
	flex-wrap:wrap;
}
.menu_tlt{
	width:100%;
	font-size:64rpx;
	color:#474747;
	text-align:center;
}
.menu_item{
	width:50%;
	text-align:center;
}
.menu_item image{
	width:184rpx;
	height:184rpx;
	margin-top:76rpx;
}
.close{
	text-align:center;
	margin-top:60rpx;
}
.close image{
	width:42rpx;
	height:42rpx;
}