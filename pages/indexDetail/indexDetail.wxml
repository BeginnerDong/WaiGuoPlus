<view class="w670 bg1">
	<view class="information_title flex">
        <view class="title1 font30 color3">{{web_mainData.title}}</view>
        <span> | </span>
        <view  class="title2 font30 color3">{{web_mainData.city}}</view>
        <span> ●</span>
        <view  class="title3 font32 color3">{{web_mainData.description}}</view>
    </view>
    <view class="font24 color96 sender flexRowBetween">
    	<view>2019-10-10</view>
		<view>发布人:{{web_mainData.user.nickname}}</view>
		<view class="flex"  style="width:20%;">
			<view style="float:right;text-align:right;width:100%;">
				<image src="/images/handle1.png" style="float:right;"></image>
				<view style="float:right;">{{web_mainData.view_count}}</view>
			</view>
		</view>
    </view>
    <view class="detail">
	    <view class="font28 color3" style="margin-top:70rpx;">
	    	{{web_mainData.content}}
	    </view>
	    <block wx:for="{{web_mainData.mainImg}}" wx:key="index">
	    	<image src="{{item.url}}"></image>
	    </block>
	</view>
</view>
<view class="big_title flexRowBetween">
    <view class="tlt_left"></view>
    <view class="tlt_center font28 color96">全部评论({{web_total}}条)</view>
    <view class="tlt_left"></view>
</view>


<view class="w670" wx:if="{{web_mainData.length>0}}">
	<block wx:for="{{web_mainData}}" wx:key="id">
		<view class="comment bg1" bindtap="intoPath" data-path="/pages/indexStateDetail/indexStateDetail">
			<view class="information_tlt w690 flex">
	            <view class="user_left">
	                <view class="user_img">
	                   <image src="{{item.user.headImgUrl}}" class="user_img"></image>
	                </view>
	            </view>
	            <view class="user_center font32 avoidOverflow">
	            	<view>{{item.user.nickname}}</view>
	            	<view class="font22 color96">{{item.create_time}}</view>
	            </view>
	        </view>
	        <view class="font28 color3 w690">
	        	<view style="border-bottom:solid 1px #c9c9c9;padding-bottom:32rpx">
		        	{{item.content}}
		        </view>
		        <block wx:for="{{item.remarkData}}"  wx:for-item="c_item">
			        <view class="comment_list font28 color6 flex">
			        	<view class="comment_left avoidOverflow">
			        		我叫王小二:
			        	</view>
			        	<view class="comment_right">
			        		我叫王小二我叫王小二
			        	</view>
			        </view>
		        </block>
		        <view class="quesition_number font28 color9">
	                <view class="font28 color">查看全部</view>
	                <view class="more_icon"><image src="/images/down1.png"></image></view>
	            </view>
	        </view>
	    </view>
    </block> 
</view>


<view class="big_title flexRowBetween">
    <view class="tlt_left"></view>
    <view class="tlt_center font28 color96">全部评论(0条)</view>
    <view class="tlt_left"></view>
</view>
<view class="no_comment">
	<image src="/images/no_comment.png"></image>
	<view class="font24"style="color:#c9c9c9">还没有有人评论，你当是第一个吧~</view>
</view>
<view style="width:100%;height:120rpx;"></view>
<view class="w670 comment_bottom bg1 flex">
	<view class="search1">
	    <input placeholder="发表下看法吧" class="font28 color6" placeholder-class="placeholder"></input>
	</view>
	<view class="comment_great flexCenter">
		<image src="/images/handle2.png"></image>
		<text class="font24 color96">587466</text>
	</view>
	<view class="comment_share">
		<button open-data="share">
			<image src="/images/handle4.png"></image>
		</button>
	</view>
</view>