<!--index.wxml-->
<view class="user w690 bg1">
    <view class="w710">
        <view class="user_top flex">
            <view class="user_left">
                <view class="user_img shadow2">
                    <image src="{{web_mainData.people[0].headImgUrl}}" class="user_img shadow2"></image>
                </view>
                <view class="font24 submit_info" style="text-align:center;width:182rpx;height:60rpx;line-height:60rpx;margin:0 auto;">
                    关注
                </view>
            </view>
            <view class="user_right">
                <view class="user_infor">
                    <view class="user_name color3">
                        {{web_mainData.nickname}}
                    </view>
                    <view class="user_city color3 font28">
                         {{web_mainData.info.level!=''?web_mainData.info.level:'未知'}}·{{web_mainData.info.address!=''?web_mainData.info.address:'未知'}}·{{web_mainData.info.gender==1?'男生':'女生'}}
                    </view>
                    <view class="user_record flex">
                        
                        <view class="user_record_right font28 color96  avoidOverflow">
                            {{web_mainData.info.passage1!=''?web_mainData.info.passage1:'这个人很懒，什么都没留下'}}
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>
<view class="user_sort flex bg1">
    <view class="user_item">
        <view class="font30 color96">{{web_mainData.goodDataNum.num>10000?web_mainData.goodDataNum.num/10000+W:web_mainData.goodDataNum.num}}</view>
        <view class="font24 color3" style="color:#251718;font-weight:700">
            ta收到的点赞
        </view>
    </view>
    <view class="user_item" style="border-left:solid 1px #c9c9c9;border-right:solid 1px #c9c9c9">
        <view class="font30 color96">{{web_mainData.followDataNum.num>10000?web_mainData.followDataNum.num/10000+W:web_mainData.followDataNum.num}}</view>
        <view class="font24 color3" style="color:#251718;font-weight:700">
            ta的关注
        </view>
    </view>
    <view class="user_item">
        <view class="font30 color96">{{web_mainData.AnswerDataNum.num>10000?web_mainData.AnswerDataNum.num/10000+W:web_mainData.AnswerDataNum.num}}</view>
        <view class="font24 color3" style="color:#251718;font-weight:700">
            ta的回答
        </view>
    </view>
</view>

