page{
	min-height:100%;
}
.search{
	width:100%;
	height:100%;
	text-align:center;
	background:#fff;
	border-radius:0;
	margin:0;
	overflow:hidden;
}
.search_cont{
	width:100%;
	height:100vh;
	line-height:100vh;
}
.information{
	border-radius:20rpx;
}
.information_tlt{
	height:126rpx;
}
.user_img{
	width:60rpx;
	height:60rpx;
	border-radius:50%;
	overflow:hidden;
}
.user_left{
	width:14%;
}
.user_center{
	width:65%;
}
.user_right{
	width:21%;
	text-align:right;
}
.information_img{
	width:100%;
	height:450rpx;
}
.information_img image{
	width:100%;
	height:100%;
}
.information_title{
	width:100%;
	height:48rpx;
	line-height:48rpx;
	padding:30rpx 0 40rpx 0;
	overflow: hidden;
}
.information_title span{
	font-size:28rpx;
	color:#333;
	margin:0 10rpx;
}
