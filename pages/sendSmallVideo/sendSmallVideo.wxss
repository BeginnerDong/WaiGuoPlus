/**index.wxss**/
@import "../../wxParse/wxParse.wxss"
.send{
	padding-bottom:10rpx;
}
.send_left{
	width:22%;
}
.send_right{
	width:78%;
}
.placeholder{
	color:#c9c9c9;
}
.send_title{
	height:100rpx;
	border-bottom:solid 1px #c9c9c9;
}
.send_right input{
	color:#666;
}
.send textarea{
	margin-top:10rpx;
	height:340rpx;
	font-size:26rpx;
	color:#666;
	padding: 3% 0;
}
.upload_video{
	width:40%;
	height:240rpx;
	margin-right:16rpx;
	margin-bottom:20rpx;
}
.upload_icon{
	width:100%;
	height:100%;
}
.upload_item{
	width:20%;
	height:120rpx;
	margin-right:16rpx;
	margin-bottom:20rpx;
}
.upload_item image{
	width:100%;
	height:100%;
}
.delete{
	width:40rpx;
	height:40rpx;
	position:absolute;
	right:-20rpx;
	top:-20rpx;
}
.upload_left{
	width:88%;
	height:360rpx;
}
.upload_right{
	width:12%;
	height:360rpx;
	overflow: hidden;
}
.limit_number{
	color:#c9c9c9;
	width:100%;
	height:100%;
	line-height:660rpx;
	text-align:right;
}
.position{
	height:100rpx;
}
.position_img{
	width:10%;
}
.position_img image{
	width:34rpx;
	height:38rpx;
	margin-right:30rpx;
}
.position{
	margin-top:10rpx;
}
.position_left{
	width:80%;
}
.position_right{
	width:10%;
	text-align:right;
}
.position_right image{
	width:14rpx;
	height:24rpx;
}
.upload_box{
	width:40%;
	height:240rpx;
	overflow:hidden;
}
.upload_box video{
	width:100%;
	height:240rpx;
}