/**index.wxss**/
@import "../../wxParse/wxParse.wxss"
.send{
	padding-bottom:10rpx;
	padding-top:16rpx;
}
.send textarea{
	width:100%;
	height:340rpx;
	font-size:26rpx;
	color:#666;
	padding:3% 0;
}
.upload_item{
	width:20%;
	height:120rpx;
	margin-right:16rpx;
	margin-bottom:20rpx;
}
.delete{
	width:40rpx;
	height:40rpx;
	position:absolute;
	right:-20rpx;
	top:-20rpx;
}
.upload_item image{
	width:100%;
	height:100%;
}
.upload_left{
	width:88%;
}
.upload_right{
	width:12%;
	height:120rpx;
	overflow: hidden;
}
.limit_number{
	color:#c9c9c9;
	width:100%;
	height:100%;
	line-height:160rpx;
	text-align:right;
}
.position{
	height:100rpx;
}
.position_img{
	width:10%;
}
.position_img image{
	width:34rpx;
	height:38rpx;
	margin-right:30rpx;
}
.position{
	margin-top:10rpx;
}
.position_left{
	width:80%;
}
.position_right{
	width:10%;
	text-align:right;
}
.position_right image{
	width:14rpx;
	height:24rpx;
}