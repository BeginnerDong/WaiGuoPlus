/**index.wxss**/
@import "../../wxParse/wxParse.wxss"
page{
	width:100%;
	min-height:100%;
}
.search{
	width:100%;
	height:100%;
	text-align:center;
	background:#fff;
	border-radius:0;
	margin:0;
	overflow:hidden;
}
.search_cont{
	width:100%;
	height:100vh;
	line-height:100vh;
}
.information_tlt{
	height:160rpx;
}
.user_img{
	width:96rpx;
	height:96rpx;
	border-radius:50%;
	overflow:hidden;
}
.user_left{
	width:20%;
}
.user_center{
	width:39%;
}
.user_right{
	width:41%;
	text-align:right;
}
.user_right image{
	width:14rpx;
	height:24rpx;
	margin-left:20rpx;
}
.information_img{
	width:100%;
	height:450rpx;
}
.information_img image{
	width:100%;
	height:100%;
}
.information_title{
	width:100%;
	height:78rpx;
	line-height:90rpx;
	overflow: hidden;
}
.information_title span{
	font-size:28rpx;
	color:#333;
	margin:0 10rpx;
}
.information_cont{
	height:66rpx;
}
.handle{
	width:100%;
	height:96rpx;
}
.handle_browse{
	width:25%;
}
.handle_browse image{
	width:34rpx;
	height:28rpx;
	margin-right:14rpx;

}
.handle_browse button{
	width:80rpx;
	height:40rpx;
	line-height:40rpx;
	border:none;
	padding:0;
	margin:0;
	background:none;
}
.information_three_img{
	flex-wrap:wrap;
}
.information_three_img image{
	width:210rpx;
	height:140rpx;
}